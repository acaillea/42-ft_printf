SRCS	= 	ft_printf.c 	\
			len_int.c 		\
			print_int.c 	\
			print_char.c 	\
			print_hex.c

SRCS_DIR =	./Sources/

#------------------------------------------------------------------------------#

CFLAGS	= -Wall -Werror -Wextra
CC		= gcc
RM		= rm -rf
MK		= mkdir -p

#------------------------------------------------------------------------------#

NAME	= libftprintf.a
INC		= ft_printf.h
OBJ_DIR	= ./Objects/
OBJS	= ${addprefix ${OBJ_DIR}, ${SRCS:%.c=%.o}}
#------------------------------------------------------------------------------#

all: ${NAME}

#------------------------------------------------------------------------------#

${OBJ_DIR}:
	${MK} ${OBJ_DIR}

${OBJ_DIR}%.o:${SRCS_DIR}%.c
	${CC} ${CFLAGS} -I ${INC} -c $< -o $@

${NAME}: ${OBJ_DIR} ${OBJS}
		ar rcs ${NAME} ${OBJS}
		ranlib ${NAME}

#------------------------------------------------------------------------------#

clean:
	${RM} ${OBJ_DIR}

fclean: clean
	${RM} ${NAME}

re: fclean all

#------------------------------------------------------------------------------#

.PHONY: all clean fclean re